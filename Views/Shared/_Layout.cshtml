@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - AI-Powered Startup Valuation</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <style>
        /* Your custom CSS from your provided layout */
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f0f4ff 0%, #eef2ff 50%, #f9f7ff 100%);
            min-height: 100vh;
            padding-top: 3rem;
            padding-bottom: 3rem;
        }

        .main-card {
            border-radius: 1.5rem;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f0f4ff 0%, #eef2ff 50%, #f9f7ff 100%);
            /* from-blue-50 via-indigo-50 to-purple-50 */
            min-height: 100vh;
            padding-top: 3rem;
            padding-bottom: 3rem;
        }

        .main-card {
            border-radius: 1.5rem;
            /* rounded-3xl */
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            /* shadow-xl */
        }

        .icon-badge {
            width: 2.5rem;
            height: 2.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.5rem;
            /* rounded-lg */
        }

        /* Input and Select Styling */
        .form-control,
        .form-select {
            border-radius: 0.75rem;
            /* rounded-xl */
            padding: 0.75rem 1rem;
            border: 1px solid #d1d5db;
            /* border-gray-300 */
            transition: all 0.2s ease-in-out;
        }

        .form-control:focus,
        .form-select:focus {
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.25);
            /* focus:ring-2 focus:ring-blue-500 */
            border-color: transparent;
        }

        /* Gradient Button */
        .btn-gradient {
            background-image: linear-gradient(to right, #2563eb, #4f46e5);
            /* from-blue-600 to-indigo-600 */
            color: white;
            padding: 1rem 1.5rem;
            border: none;
            border-radius: 0.75rem;
            font-weight: 600;
            font-size: 1.125rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
            transition: all 0.2s;
        }

        .btn-gradient:hover:not(:disabled) {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
            color: white;
        }

        .btn-gradient:disabled {
            opacity: 0.5;
        }

        /* Heading Icon Badge */
        .heading-badge {
            width: 4rem;
            height: 4rem;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #2563eb, #4f46e5);
            /* blue-600 to-indigo-600 */
            border-radius: 1rem;
            /* rounded-2xl */
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        /* Result Cards */
        .result-card-base {
            border-radius: 1rem;
            /* rounded-2xl */
            padding: 1.5rem;
        }

        .result-blue {
            background: linear-gradient(135deg, #eff6ff, #dbeafe);
        }

        /* from-blue-50 to-blue-100 */
        .result-purple {
            background: linear-gradient(135deg, #f5f3ff, #ede9fe);
        }

        /* from-purple-50 to-purple-100 */
        .result-green {
            background: linear-gradient(135deg, #f0fff4, #d1fae5);
        }

        /* from-green-50 to-green-100 */
        .result-indigo {
            background: linear-gradient(135deg, #eef2ff, #e0e7ff);
            /* from-indigo-50 to-indigo-100 */
            border: 2px solid #a5b4fc;
            /* border-indigo-300 */
        }

        .result-analysis {
            background-color: #fffbeb;
            border-radius: 0.75rem;
            padding: 1rem;
        }

        /* bg-yellow-50 */
        .result-insight {
            background-color: #eff6ff;
            border-radius: 0.75rem;
            padding: 1rem;
        }

        /* bg-blue-50 */
        .result-recommendation {
            background-color: #f0fff4;
            border-radius: 0.75rem;
            padding: 1rem;
        }

        /* bg-green-50 */

        .disclaimer-card {
            border-radius: 1rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        }

        /* ... all your remaining CSS ... */
    </style>
</head>

<body>
    <div class="container" style="max-width: 900px;">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
